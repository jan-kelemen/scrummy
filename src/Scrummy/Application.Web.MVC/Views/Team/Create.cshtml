@model Scrummy.Application.Web.MVC.ViewModels.Team.CreateTeamViewModel

@{
    ViewData["Title"] = "Create team";
}

<h2>Create team</h2><hr />
<div class="row">
    <div class="col-xs-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfDailyScrum" class="control-label"></label>
                <input asp-for="TimeOfDailyScrum" class="form-control" />
                <span asp-validation-for="TimeOfDailyScrum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table" id="memberTable">
                    <tr id="tableHeader">
                        <th class="actionButton">Step</th>
                        <th><button class="btn btn-default tableButton" name="add">Add</button></th>
                    </tr>
                    @for (var i = 0; i < Model.SelectedMemberIds.Count; ++i)
                    {
                        <tr>
                            <td><select asp-for="SelectedMemberIds" asp-items="Model.Persons" class="form-control"></select></td>
                            <td><select asp-for="SelectedRoles" asp-items="Model.Roles" class="form-control"></select></td>
                            <td><button class="btn btn-default tableButton" name="del" onclick="remove_row(this)">Delete</button></td>
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
