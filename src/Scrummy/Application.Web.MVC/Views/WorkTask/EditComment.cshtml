@model Scrummy.Application.Web.MVC.ViewModels.WorkTask.Comment.EditCommentViewModel

@{
    ViewData["Title"] = "Edit comment";
}

<div class="row">
    <div class="col-xs-2">
        <h2>Actions</h2> <hr />
        <a asp-action="Index" class="btn btn-default actionButton" asp-route-id="@Model.WorkTask.Id">Cancel</a>
    </div>
    <div class="col-xs-10">
        <h2>Edit comment - @Model.WorkTask.Text</h2><hr />
        <form asp-action="EditComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.WorkTask.Id)
            @Html.HiddenFor(x => x.WorkTask.Text)
            @Html.HiddenFor(x => x.CommentId)
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
