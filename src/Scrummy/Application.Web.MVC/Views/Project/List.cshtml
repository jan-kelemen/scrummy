@model Scrummy.Application.Web.MVC.ViewModels.Project.ListProjectsViewModel

@{
    ViewData["Title"] = "List projects";
}

<h2>List of projects</h2> <hr/>

<table class="table">
    <thead>
        <tr>
            <th>Project</th>
            <th>Current team</th>
            <th class="actionColumn" colspan="5"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>
                    @project.ProjectViewModel.Text
                </td>
                <td>
                    <a asp-area="" asp-controller="Team" asp-action="Index" asp-route-id="@project.TeamViewModel.Id">@project.TeamViewModel.Text</a>
                </td>
                <td>
                    <a asp-action="Backlog" class="btn btn-default" asp-route-id="@project.ProjectViewModel.Id" asp-route-flavor="Backlog"><span class="glyphicon glyphicon-list"></span></a>
                </td>
                <td>
                    <a asp-action="Sprints" class="btn btn-default" asp-route-id="@project.ProjectViewModel.Id" asp-route-status="Planned"><span class="glyphicon glyphicon-calendar"></span></a>
                </td>
                <td>
                    <a asp-action="Meetings" class="btn btn-default" asp-route-id="@project.ProjectViewModel.Id"><span class="glyphicon glyphicon-hourglass"></span></a>
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-default" asp-route-id="@project.ProjectViewModel.Id"><span class="glyphicon glyphicon-edit"></span></a>
                </td>
                <td>
                    <a asp-area="" class="btn btn-default" asp-action="Index" asp-route-id="@project.ProjectViewModel.Id"><span class="glyphicon glyphicon-option-horizontal"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
